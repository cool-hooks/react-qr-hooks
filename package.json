{
  "name": "react-qr-hooks",
  "version": "1.0.7",
  "description": "Encode & decode QR code in React",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-qr-hooks.cjs.js",
  "module": "lib/react-qr-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-qr-hooks.git"
  },
  "keywords": [
    "qr",
    "hooks",
    "React",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-qr-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-qr-hooks#readme",
  "dependencies": {
    "qrcode": "^1.4.4",
    "qrcode-decoder": "^0.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.41",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
